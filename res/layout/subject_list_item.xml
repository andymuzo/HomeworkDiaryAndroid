<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_body"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_subject_picture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="@dimen/size4dp"
        android:layout_marginLeft="@dimen/size8dp"
        android:layout_marginRight="@dimen/size16dp"
        android:layout_marginTop="@dimen/size4dp"
        android:contentDescription="@string/subject_icon"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txt_subject_title"
        android:layout_width="0dip"
        android:layout_height="64dp"
        android:layout_marginBottom="@dimen/size4dp"
        android:layout_marginTop="@dimen/size4dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:text="@string/default_subject"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/img_delete_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="@dimen/size4dp"
        android:layout_marginLeft="@dimen/size8dp"
        android:layout_marginRight="@dimen/size8dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:contentDescription="@string/subject_icon"
        android:gravity="center_vertical"
        android:onClick="deleteButtonPressed"
        android:scaleType="fitCenter" />

</LinearLayout>