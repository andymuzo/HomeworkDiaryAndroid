<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_body"
    android:gravity="center_vertical"
    android:paddingBottom="4dp"
    android:paddingTop="4dp" >

    <TextView
        android:id="@+id/lbl_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/size32dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/due_date_display_text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/list_homework_due_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight="4"
        android:text="@string/due_date_set"
        android:textSize="18sp" >
    </TextView>

    <ImageView
        android:id="@+id/continue_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="@dimen/size16dp"
        android:layout_marginRight="@dimen/size16dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/continue_icon"
        android:scaleType="centerCrop" >
    </ImageView>

</LinearLayout>