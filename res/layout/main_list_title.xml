<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/gradient_title">

    <TextView
        android:id="@+id/txt_main_list_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/title_default"
        android:layout_marginLeft="@dimen/size16dp"
        android:layout_marginRight="@dimen/size16dp"
        android:textColor="@color/txt_body_title"
        android:textSize="16sp" />

</LinearLayout>
