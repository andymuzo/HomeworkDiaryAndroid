<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_set_date_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size8dp"
            android:layout_marginLeft="@dimen/size16dp"
            android:layout_marginRight="@dimen/size16dp"
            android:layout_marginTop="@dimen/size8dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <DatePicker
            android:id="@+id/dpPickDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:spinnersShown="false"
            android:layout_marginBottom="@dimen/size8dp"
            android:layout_marginLeft="@dimen/size16dp"
            android:layout_marginRight="@dimen/size16dp"
            android:layout_marginTop="@dimen/size8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/size8dp"
                android:layout_marginLeft="@dimen/size16dp"
                android:layout_marginRight="@dimen/size16dp"
                android:layout_marginTop="@dimen/size8dp"
                android:layout_weight="1"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/size8dp"
                android:layout_marginLeft="@dimen/size16dp"
                android:layout_marginRight="@dimen/size16dp"
                android:layout_marginTop="@dimen/size8dp"
                android:layout_weight="1"
                android:text="@string/set" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>