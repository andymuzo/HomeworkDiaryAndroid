<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_body"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_time_start_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darken_background"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:gravity="center"
        android:text="@id/subject_name"
        android:textColor="@color/extremely_light_red"
        android:textSize="14sp"
        android:textStyle="bold" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/subject_picture"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="@dimen/size16dp"
            android:layout_marginRight="@dimen/size8dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/subject_icon"
            android:scaleType="centerCrop" >
        </ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size8dp"
            android:layout_marginRight="@dimen/size16dp"
            android:layout_weight="1.5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@id/homework_title"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@id/due_date"
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:id="@+id/txt_tutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@id/subject_name"
                android:textSize="14sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>